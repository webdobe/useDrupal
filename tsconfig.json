{
  "compilerOptions": {
    "outDir": "lib/esm",
    "jsx": "react",
    "lib": ["dom", "es6"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
  ]
}
